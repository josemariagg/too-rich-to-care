# Port where the backend runs
PORT=5000

# Allowed CORS origins (comma separated)
CORS_ORIGINS=http://localhost:5173,https://too-rich-to-care-frontend.vercel.app,https://app.2richtocare.com

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Cloudinary credentials to upload assets
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe secret key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Stripe price ID
STRIPE_PRICE_ID=your_stripe_price_id

# Stripe webhook secret key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Optional URL to send video generation requests after successful payments
VIDEO_POD_URL=https://video-pod.example.com/webhook
